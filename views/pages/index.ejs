<!DOCTYPE html>
<html lang="en">

<head>
  <title>Book Collection</title>
  <link rel="stylesheet" href="./styles/reset.css" />
  <link rel="stylesheet" href="./styles/base.css" />
  <link rel="stylesheet" href="./styles/layout.css" />
  <link rel="stylesheet" href="./styles/modules.css" />
  <link rel="stylesheet" href="./styles/icons.css" />
</head>

<body>
  <main>
    <header>
      <h2>Best Books</h2>
    </header>
    <section>
      <h4>Search for books</h4>
    </section>

    <!-- action visits the route and method is the route method -->
    <form action='/searches' method='post'>
      <input type="text" name="search" placeholder="Enter a title or author" required>
      <fieldset>
        <label for="title">
          <span>Title</span>
          <input type="radio" name="search" value="title" required>
        </label>
      </fieldset>
      <fieldset>
        <label for="author">
          <span>Author</span>
          <input type="radio" name="search" value="author" required>
        </label>
      </fieldset>
      <button type="submit">Search the Google Books API</button>
    </form>
  </main>
</body>

</html>